# platform :ios, '9.0'

target 'Lingo' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Lingo
  pod ‘Firebase/Core’
  pod ‘Firebase/Database’
  pod ‘Firebase/Auth’

	
  target 'LingoTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'LingoUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
